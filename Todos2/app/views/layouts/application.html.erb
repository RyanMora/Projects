<!DOCTYPE html>
<html>
  <head>
    <title>Todos2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Robot+Slab">
  </head>

  <body>
    <% if logged_in? %>
      <%= button_to "Log Out", session_url, method: :delete, class: "log-out button" %>
    <% end %>
    <%= yield %>
  </body>
</html>
